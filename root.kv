<ContentNavigationDrawer>
    MDList:

        OneLineListItem:
            text:" mene ruutuun 2"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current="screen2"

        OneLineListItem:
            text:" mene ruutuun 1"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current="screen1"

MDScreen:
    MDTopAppBar:
        pos_hint:{"top":1}
        left_action_items: [["menu",lambda x:nav_drawer.set_state("open")]] 


    MDNavigationLayout:

        MDScreenManager:
            id:screen_manager
        
            MDScreen:
                name:"screen1"

                MDLabel:
                    text: "RUUTU1"
                    halign: "center"
            MDScreen:
                name:"screen2"

                MDLabel:
                    text: "RUUTU2"
                    halign: "center"
        MDNavigationDrawer:
            id:nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer