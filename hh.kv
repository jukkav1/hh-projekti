#:kivy 2.1.0
# WindowManager: # mitä ikkunoita meillä on
#     MainWindow:
#     Diary:
#     Exercise:

<MainWindow>:
    name:"ScreenManager"     #annetaan ikkunalle nimi, jota käytetään siirtymisessä
    BoxLayout:
        orientation: "vertical"
        rows: 2

        ScreenManager:
            id: sm
            size_hint_y: 0.8

            Exercise:

            Diary:
                # name: "diary"
                # BoxLayout:
                #     orientation: "vertical"
                #     rows: 1

    
        # Image:
        #     source:"images/testi2.png"
        #     allow_stretch:True
        #     keep_ratio:False
        
        Button:
            text:"päiväkirja"
            size_hint:0.35, 0.2 #kuvan koko 
            pos_hint:{"x":0,"bottom":1} # kuvan sijainti
            on_release:
                sm.current="diary"    #minne mennään kun nappia painetaan
                sm.transition.direction="left" 

        Button:
            text:"harjoitteet"
            size_hint:0.35, 0.2
            pos_hint:{"x":0.35,"bottom":1}
            on_release:
                sm.current="exercise"    
                sm.transition.direction="left" 
        Button:
            text:"sulje"
            size_hint:0.35, 0.2
            pos_hint:{"x":0.7,"bottom":1}
            background_color:"#AA0000"
            on_press:
                app.stop()

<Diary>:
    name:"diary"

    Image:
        source:"images/testi3.png"
        allow_stretch:True
        keep_ratio:False
    
<Exercise>:
    name:"exercise"

    Image:
        source:"images/testi.png"
        allow_stretch:True
        keep_ratio:False

    Button:
        text:"ääni"
        size_hint:0.5, 0.1
        pos_hint:{"x":0.5,"top":1}
        on_release:
            root.play_sound()
