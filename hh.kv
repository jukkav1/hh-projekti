WindowManager: # mitä ikkunoita meillä on
    MainWindow:
    Diary:
    Exercise:

<MainWindow>:
    name:"main"     #annetaan ikkunalle nimi, jota käytetään siirtymisessä
    
    Image:
        source:"images/testi2.png"
        allow_stretch:True
        keep_ratio:False
    
    Button:
        text:"päiväkirja"
        size_hint:0.35, 0.2 #kuvan koko 
        pos_hint:{"x":0,"bottom":1} # kuvan sijainti
        on_release:
            app.root.current="diary"    #minne mennään kun nappia painetaan
            root.manager.transition.direction="left" 

    Button:
        text:"harjoitteet"
        size_hint:0.35, 0.2
        pos_hint:{"x":0.35,"bottom":1}
        on_release:
            app.root.current="exercise"    #minne mennään kun nappia painetaan
            root.manager.transition.direction="left" # miten sinne siirrytään
    Button:
        text:"sulje"
        size_hint:0.35, 0.2
        pos_hint:{"x":0.7,"bottom":1}
        on_press:
            app.stop()

