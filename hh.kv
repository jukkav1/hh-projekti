WindowManager:
    MainWindow:
    SecondWindow:

<Mainwindow>:
    name:"main"

    Button:
        text:"possu"
        on_release:
            app.root.current="secondwindow"
            root.manager.transition.direction="left" 

    BoxLayout:
        orientation: 'vertical'
        
        Image:
            source:"images/testi2.png"
            allow_stretch:True
            keep_ratio:False
        
        MDBottomAppBar:
            title: "Bottom Navbar"
            md_bg_color: .2,.2,.2,1
            specific_text_color: 1,1,1,1
    
        MDBottomNavigation:
            #color stuff
            #panel_color: 0,0,1,1
    
            MDBottomNavigationItem:
                name: 'Main'
                text: "nappi1"
                icon: 'home'

                MDLabel:
                    text: "lammas1"
                    halign: 'center'
    
            MDBottomNavigationItem:
                name: 'secondwindow'
                text: "nappi2"
                icon: "home"
                MDLabel:
                    text: "lammas2"
                    halign: 'center'
    

<SecondWindow>:
    name:"secondwindow"
    Button:
        text:"lammas"
        on_release:
            app.root.current="main"
            root.manager.transition.direction="right" 

    BoxLayout:
        orientation: 'vertical'
        
        Image:
            source:"images/testi.png"
            allow_stretch:True
            keep_ratio:False
        
        MDBottomAppBar:
            title: "Bottom Navbar"
            md_bg_color: .2,.2,.2,1
            specific_text_color: 1,1,1,1
    
        MDBottomNavigation:
            #color stuff
            #panel_color: 0,0,1,1
    
            MDBottomNavigationItem:
                name: 'screen 1'
                text: "nappi1"
                icon: 'home'

                MDLabel:
                    text: "lammas1"
                    halign: 'center'
    
            MDBottomNavigationItem:
                name: 'screen 3'
                text: "nappi3"
                icon: 'home'
                        