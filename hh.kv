<ContentNavigationDrawer>
    MDList:
        # luodaan elementti sivupalkkiin
        OneLineListItem:
            text:" Etusivu"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current="home"

        OneLineListItem:
            text:"Päiväkirja"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current="diary"
        OneLineListItem:
            text:"Harjoitteet"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current="exercise"
<MainWindow>:
    name:"ScreenManager"     #annetaan ikkunalle nimi, jota käytetään siirtymisessä
    BoxLayout:
        orientation: "vertical"
        rows: 2
        MDTopAppBar:
        #palkin sijainti
            title:"Yläpalkki"
            pos_hint:{"top":1}
            #lisätään viivat yläreunaan ja määritellään palkki avautumaan painaessa, viitataan palkkiin id:n nimellä
            left_action_items: [["menu",lambda x:nav_drawer.set_state("open")]]
        MDNavigationLayout:
            ScreenManager:
                id: sm
                #käytössä olevat ruudut
                Diary:      #importataan ulkoa
                Home:
                Exercise:
            #luodaan sivupalkki 
            MDNavigationDrawer:
                #annetaan palkille nimi johon voidaan viitata sitä avatessa
                id:nav_drawer
                ContentNavigationDrawer:
                    #kerrotaan millä nimella asias löytyvät pythonin puolelta (mainissa olevat) ja kivyn puolella (kv:ssä olevat)
                    screen_manager: sm
                    nav_drawer: nav_drawer
        
<Home>:
    name:"home"
    Image:
        source:"images/testi2.png"
        allow_stretch:True
        keep_ratio:False
    
<Exercise>:
    name:"exercise"

    Image:
        source:"images/testi.png"
        allow_stretch:True
        keep_ratio:False

    Button:
        text:"ääni"
        size_hint:0.5, 0.1
        pos_hint:{"x":0.5,"top":1}
        on_release:
            root.play_sound()
