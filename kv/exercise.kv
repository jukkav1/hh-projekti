        icon_size:"48dp"
        pos_hint:{"center_x":0.20,"top":0.815}
        on_release:root.stop_audio() #kutsuu def stop_audiota exercice.py:stä
    
    MDProgressBar:
        pos_hint:{"center_x":0.62,"center_y":0.75}
        size_hint_x: 0.43
        color: 163/255, 102/255, 28/255, 1
        max:494
        value:root.bar_progress2

