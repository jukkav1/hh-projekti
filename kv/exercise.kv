#:kivy 2.1.0
<Exercise>:
    name:"exercise"

    Image:
        source:"images/tausta-lehdet.png"
        fit_mode: "fill"

    MDLabel: # ensimmäsen audion tiedot
        text:"Metsä"
        theme_text_color: "Custom"
        text_color:0,0,0,1
        font_style:"Subtitle2"
        font_size:"20sp"
        pos_hint:{"x":0.40,"top":1.45}
    
    MDIconButton:
        id:play_one
        name:"play one"
        disabled:False
        icon:"play-circle-outline"
        icon_size:"48dp"
        pos_hint:{"center_x":0.08,"top":0.965}
        on_release:root.Button1("sounds/ambient_forest.mp3") #kutsuu def Button1 exercice.py:stä

    MDIconButton:
        id:stop_one
        name:"stop one"
        icon:"stop-circle-outline"
        icon_size:"48dp"
        pos_hint:{"center_x":0.20,"top":0.965}
        on_release:root.stop_audio() #kutsuu def play_stop_audiota exercice.py:stä
    
    MDProgressBar:
        pos_hint:{"center_x":0.62,"center_y":0.90}
        size_hint_x: 0.43
        color: 163/255, 102/255, 28/255, 1
        max:494
        value:root.bar_progress1

    MDLabel:
        text:root.timer1 # hakee tiedot exercise.py:n timer kohdasta, vaatii string, muodon
        pos_hint:{"x":0.26,"top":1.40}

    MDLabel:
        text:"08:12" # tähän näkyviiin audion pituus
        pos_hint:{"x":0.86,"top":1.40}
    
    MDLabel: # toisen audion tiedot
        text:"Lehdet"
        theme_text_color: "Custom"
        text_color:0,0,0,1
        font_style:"Subtitle2"
        font_size:"20sp"
        pos_hint:{"x":0.40,"top":1.30}
    
    MDIconButton:
        id:play_two
        name:"play two"
        disabled:False
        icon:"play-circle-outline"
        icon_size:"48dp"
        pos_hint:{"center_x":0.08,"top":0.815}
