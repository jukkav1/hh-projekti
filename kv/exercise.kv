#:kivy 2.1.0
<Exercise>:
    name:"exercise"

    Image:
        source:"images/testi3.png"
        allow_stretch:True
        keep_ratio:False

    MDLabel:
        text:"Lintuääni"
        size_hint:0.1, 0.1
        pos_hint:{"x":0.1,"top":1}

    MDIconButton:
        icon:"play"
        icon_size:"50dp"
        size_hint:0.1, 0.1
        pos_hint:{"x":0.8,"top":1}
        on_release:
            root.play()

    MDIconButton:
        icon:"pause"
        icon_size:"50dp"
        size_hint:0.1, 0.1
        pos_hint:{"x":0.9,"top":1}
        on_release:
            root.stop()
    MDLabel:
        text:"00:00"
        pos_hint:{"x":0.9,"top":1.35}
               
    MDProgressBar:
        pos_hint:{"x":0.5,"top":0.9}
        color: 1,0,0,1
        max:8
        value:root.progress
