#:kivy 2.1.0
<MainWindow>:

    MDBoxLayout:
        orientation: "vertical"
        
        MDTopAppBar:
            md_bg_color: 189/255, 132/255, 47/255, 1
            specific_text_color: 237/255, 216/255, 174/255, 1
            left_action_items: [["menu"]]
            right_action_items: [["close", lambda x: app.stop()]]
            
        MDBottomNavigation:
            id: "bottom_nav"
            panel_color: 189/255, 132/255, 47/255, 1
            text_color_active: 237/255, 216/255, 174/255, 1

            MDBottomNavigationItem:
                name: "main"
                text: "Koti"
                icon: "home"
                Home:

            MDBottomNavigationItem:
                name: "diary"
                text: "Päiväkirja"
                icon: "notebook"
                DatePickerContainer:

            MDBottomNavigationItem:
                name: "excercise"
                text: "Harjoitteet"
                icon: "music"
                Exercise:

<Home>:
    name:"home"
    Image:
        source:"images/final.png"
        allow_stretch:True
        keep_ratio:False
    
