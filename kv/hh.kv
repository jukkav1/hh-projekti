#:kivy 2.1.0
<MainWindow>:

    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            left_action_items: [["menu"]]

            MDIconButton:
                pos_hint:{"center_x":0.99,"center_y":0}
                icon:"close"
                icon_size:"64sp"
                on_press:app.stop()

        MDBottomNavigation:
            id: "bottom_nav"
            panel_color: 1,0,0,1
            text_color_active: 0, 1, 0, 1

            MDBottomNavigationItem:
                name: "main"
                text: "Koti"
                icon: "home"
                Home:

            MDBottomNavigationItem:
                name: "Diary"
                text: "Päiväkirja"
                icon: "notebook"
                Diary:

            MDBottomNavigationItem:
                name: "excercise"
                text: "Harjoitteet"
                icon: "music"
                Exercise:

<Home>:
    name:"home"
    Image:
        source:"images/testi2.png"
        allow_stretch:True
        keep_ratio:False
    
