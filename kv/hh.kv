#:kivy 2.2.0
#:import Excercise exercise
#:import DatePickerContainer datepicker

# Pääikkunan määrittelyt
<MainWindow>:
    MDBoxLayout:
        orientation: "vertical"
        
        # Yläpalkki
        MDTopAppBar:
            md_bg_color: 189/255, 132/255, 47/255, 1
            specific_text_color: 237/255, 216/255, 174/255, 1
            # Krediittejä varten, lisätään myöhemmin
            left_action_items: [["information-variant", lambda x: app.credits()]]

            # sovelluksen sammutus
            right_action_items: [["close", lambda x: app.stop()]]
            
        # Alapalkin toiminta
        MDBottomNavigation:
            id: "bottom_nav"
            panel_color: 189/255, 132/255, 47/255, 1
            text_color_active: 237/255, 216/255, 174/255, 1

            #Navigaationappuloiden toiminta
            MDBottomNavigationItem:
                name: "main"
                text: "Koti"
                icon: "home"
                Home:

            MDBottomNavigationItem:
                name: "diary"
                text: "Päiväkirja"
                icon: "notebook"
                DatePickerContainer:

            MDBottomNavigationItem:
                name: "excercise"
                text: "Harjoitteet"
                icon: "music"
                Exercise:

#Pääikkunan taustakuva
<Home>:
    name:"home"
    Image:
        source:"images/final.png"
        fit_mode: "fill"    
