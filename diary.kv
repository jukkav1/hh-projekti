#:kivy 2.1.0
<Diary>:
    name:"diary"

    Image:
        source:"images/testi3.png"
        allow_stretch:True
        keep_ratio:False
    
    Button:
        text:"koti"
        size_hint:0.35, 0.2
        pos_hint:{"x":0,"bottom":1}
        on_release:
            app.root.current="main"    
            root.manager.transition.direction="left" 

    Button:
        text:"harjoitteet"
        size_hint:0.35, 0.2
        pos_hint:{"x":0.35,"bottom":1}
        on_release:
            app.root.current="exercise"    
            root.manager.transition.direction="left" 
    Button:
        text:"sulje"
        size_hint:0.35, 0.2
        pos_hint:{"x":0.7,"bottom":1}
        background_color:"#AA0000"
        on_press:
            app.stop()
